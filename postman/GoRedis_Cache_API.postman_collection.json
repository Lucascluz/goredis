{
	"info": {
		"_postman_id": "goredis-cache-api",
		"name": "GoRedis Cache API",
		"description": "Collection for testing GoRedis cache operations",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": ["{{base_url}}"],
					"path": ["health"]
				}
			},
			"response": []
		},
		{
			"name": "Server Info",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/info",
					"host": ["{{base_url}}"],
					"path": ["info"]
				}
			},
			"response": []
		},
		{
			"name": "Set Key-Value (Simple)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"value\": \"Hello World\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/keys/test_key",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "keys", "test_key"]
				}
			},
			"response": []
		},
		{
			"name": "Set Key-Value with TTL",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"value\": \"This expires in 60 seconds\",\n  \"ttl\": 60\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/keys/expiring_key",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "keys", "expiring_key"]
				}
			},
			"response": []
		},
		{
			"name": "Set JSON Value",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"value\": {\n    \"name\": \"John Doe\",\n    \"age\": 30,\n    \"city\": \"New York\"\n  },\n  \"ttl\": 300\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/keys/user:123",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "keys", "user:123"]
				}
			},
			"response": []
		},
		{
			"name": "Get Key Value",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/keys/test_key",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "keys", "test_key"]
				}
			},
			"response": []
		},
		{
			"name": "Check Key Exists",
			"request": {
				"method": "HEAD",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/keys/test_key",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "keys", "test_key"]
				}
			},
			"response": []
		},
		{
			"name": "List All Keys",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/keys",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "keys"]
				}
			},
			"response": []
		},
		{
			"name": "Delete Key",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/keys/test_key",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "keys", "test_key"]
				}
			},
			"response": []
		},
		{
			"name": "Flush All Keys",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/flush",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "flush"]
				}
			},
			"response": []
		}
	]
}
